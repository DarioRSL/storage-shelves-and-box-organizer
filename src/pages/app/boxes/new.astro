---
import Layout from "@/layouts/Layout.astro";
import { BoxForm } from "@/components/forms/BoxForm";

export const prerender = false;

// Ensure user is authenticated
if (!Astro.locals.user) {
  return Astro.redirect("/auth");
}

// Get initial location from query params (optional)
const initialLocationId = Astro.url.searchParams.get("location_id") || undefined;
---

<Layout title="New Box">
  <main class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto">
      <BoxForm client:load mode="create" initialLocationId={initialLocationId} />
    </div>
  </main>
</Layout>
