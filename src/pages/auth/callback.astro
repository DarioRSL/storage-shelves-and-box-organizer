---
// Auth callback page for handling email confirmation and OAuth redirects
// Supabase redirects here with tokens in the URL hash fragment
export const prerender = false;
---

<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Potwierdzanie...</title>
    <style>
      body {
        font-family: system-ui, -apple-system, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        margin: 0;
        background: #f5f5f5;
      }
      .container {
        text-align: center;
        padding: 2rem;
      }
      .spinner {
        width: 40px;
        height: 40px;
        border: 4px solid #e5e5e5;
        border-top-color: #3b82f6;
        border-radius: 50%;
        animation: spin 1s linear infinite;
        margin: 0 auto 1rem;
      }
      @keyframes spin {
        to { transform: rotate(360deg); }
      }
      .error {
        color: #dc2626;
        margin-top: 1rem;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="spinner"></div>
      <p id="status">Potwierdzanie konta...</p>
      <p id="error" class="error" style="display: none;"></p>
    </div>

    <script>
      async function handleCallback() {
        const statusEl = document.getElementById('status');
        const errorEl = document.getElementById('error');

        try {
          // Get tokens from URL hash (Supabase email confirmation format)
          const hashParams = new URLSearchParams(window.location.hash.substring(1));
          const accessToken = hashParams.get('access_token');
          const refreshToken = hashParams.get('refresh_token');
          const type = hashParams.get('type'); // 'signup', 'recovery', 'magiclink'

          // Also check query params (some Supabase flows use query params)
          const queryParams = new URLSearchParams(window.location.search);
          const errorCode = queryParams.get('error');
          const errorDescription = queryParams.get('error_description');

          if (errorCode) {
            throw new Error(errorDescription || 'Błąd potwierdzenia');
          }

          if (!accessToken) {
            // No tokens - might be an error or direct access
            // Redirect to auth page
            statusEl.textContent = 'Przekierowanie...';
            window.location.href = '/auth';
            return;
          }

          statusEl.textContent = 'Logowanie...';

          // Set session via our API endpoint
          const response = await fetch('/api/auth/session', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({
              access_token: accessToken,
              refresh_token: refreshToken || '',
            }),
          });

          if (!response.ok) {
            const data = await response.json().catch(() => ({}));
            throw new Error(data.error || 'Błąd logowania');
          }

          // Success - redirect to app
          statusEl.textContent = 'Konto potwierdzone! Przekierowanie...';

          // Small delay to show success message
          setTimeout(() => {
            window.location.href = '/app';
          }, 500);

        } catch (error) {
          console.error('Callback error:', error);
          errorEl.textContent = error.message || 'Wystąpił błąd. Spróbuj ponownie.';
          errorEl.style.display = 'block';
          statusEl.textContent = 'Błąd potwierdzenia';

          // Redirect to auth after showing error
          setTimeout(() => {
            window.location.href = '/auth';
          }, 3000);
        }
      }

      // Run on page load
      handleCallback();
    </script>
  </body>
</html>
